pipeline {
    
    agent any

    tools{
        maven "NodeJS-8.9.0"
    }

    stages {
        stage('build'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'compiling result app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Runnign units tests on result app'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }
}
